<style>
  table,
  th,
  td {
    border: 1px solid black;
    border-collapse: collapse;
  }
</style>


<h1>Investments</h1>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Porfolio</th>
      <th scope="col">Category</th>
      <th scope="col">Name</th>
      <th scope="col">Qty</th>
      <th scope="col">Unit Purchase value</th>
      <th scope="col">Total Current Value </th>
      <th scope="col">Action </th>

    </tr>
  </thead>

  <tbody>
    <% @investmentassets.each do |investmentasset| %>
    <tr>
      <td><%= investmentasset.portfolio_id %></td>
      <td><%= investmentasset.category %></td>
      <td><%= investmentasset.name %></td>
      <td><%= investmentasset.qty %></td>
      <td><%= investmentasset.purchaseValue.round(2) %></td>
      <td><%= investmentasset.totalcurrval.round(2) %> </td>
      <td><%= link_to 'Sell', investmentasset, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

